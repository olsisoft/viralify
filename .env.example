# ===========================================
# ViralTok Platform Environment Configuration
# ===========================================

# TikTok API Configuration
TIKTOK_CLIENT_KEY=your_tiktok_client_key_here
TIKTOK_CLIENT_SECRET=your_tiktok_client_secret_here
TIKTOK_REDIRECT_URI=http://localhost:8080/api/v1/auth/tiktok/callback

# ===========================================
# LLM Provider Configuration (Multi-Provider Support)
# ===========================================
# Choose your LLM provider: openai, deepseek, groq, mistral, together, xai, ollama, runpod
# Default: openai
# Recommended for cost: groq (fast + cheap) or ollama (free, self-hosted)
LLM_PROVIDER=openai

# OpenAI Configuration (default provider)
OPENAI_API_KEY=sk-your_openai_api_key_here

# DeepSeek Configuration (90% cheaper than OpenAI)
# Get your API key at: https://platform.deepseek.com/
DEEPSEEK_API_KEY=sk-your_deepseek_api_key_here

# Groq Configuration (Ultra-fast inference with Llama)
# Get your API key at: https://console.groq.com/
GROQ_API_KEY=gsk_your_groq_api_key_here

# Mistral Configuration (Good for French content)
# Get your API key at: https://console.mistral.ai/
MISTRAL_API_KEY=your_mistral_api_key_here

# Together AI Configuration (Llama, Mixtral, DeepSeek-R1)
# Get your API key at: https://api.together.xyz/
TOGETHER_API_KEY=your_together_api_key_here

# xAI Grok Configuration (2M context window)
# Get your API key at: https://x.ai/api
XAI_API_KEY=xai-your_xai_api_key_here

# Anthropic Configuration (Optional - for Claude AI)
ANTHROPIC_API_KEY=sk-ant-your_anthropic_api_key_here

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production-minimum-32-chars
JWT_ACCESS_TOKEN_EXPIRATION=3600000
JWT_REFRESH_TOKEN_EXPIRATION=604800000

# Database Configuration
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=tiktok_platform
DATABASE_USER=tiktok_user
DATABASE_PASSWORD=tiktok_secure_pass_2024

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=redis_secure_2024

# RabbitMQ Configuration
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USER=tiktok
RABBITMQ_PASSWORD=rabbitmq_secure_2024

# Elasticsearch Configuration
ELASTICSEARCH_HOST=localhost
ELASTICSEARCH_PORT=9200

# Service URLs (for Docker networking)
AUTH_SERVICE_URL=http://auth-service:8081
TREND_SERVICE_URL=http://trend-analyzer:8000
CONTENT_SERVICE_URL=http://content-generator:8001
SCHEDULER_SERVICE_URL=http://scheduler-service:8082
ANALYTICS_SERVICE_URL=http://analytics-service:8002
TIKTOK_CONNECTOR_URL=http://tiktok-connector:8083
NOTIFICATION_SERVICE_URL=http://notification-service:8003

# External URLs for production (browser access to generated media files)
# Set these to your server's public domain/IP for production
EXTERNAL_MEDIA_URL=http://localhost:8004
EXTERNAL_PRESENTATION_URL=http://localhost:8006

# Frontend Configuration
NEXT_PUBLIC_API_URL=http://localhost:8080
NEXT_PUBLIC_WS_URL=ws://localhost:8080

# Logging
LOG_LEVEL=INFO

# Training Data Collection (for fine-tuning)
# Enable/disable training data logging
TRAINING_LOGGER_ENABLED=true
# Path to the JSONL file for training data (inside container)
TRAINING_DATA_PATH=/app/data/training_dataset.jsonl

# RAG Verifier v4 - Multilingual Support
# Mode: auto (detect cross-language), semantic_only, comprehensive
RAG_VERIFIER_MODE=auto
# Embedding backend: e5-large (best multilingual), minilm, bge-m3, tfidf
RAG_EMBEDDING_BACKEND=e5-large

# Environment
NODE_ENV=development
SPRING_PROFILES_ACTIVE=development
