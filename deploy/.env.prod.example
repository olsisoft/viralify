# ===========================================
# Viralify - Production Environment Variables
# ===========================================
# Copy to .env and fill in your values
# NEVER commit the .env file to git!

# ===========================================
# DOMAIN & URLs
# ===========================================
DOMAIN=your-domain.com
PUBLIC_API_URL=https://your-domain.com
PUBLIC_WS_URL=wss://your-domain.com

# ===========================================
# DATABASE
# ===========================================
DB_USER=viralify_prod
DB_PASSWORD=CHANGE_THIS_STRONG_PASSWORD_123!
DB_NAME=viralify_production

# ===========================================
# REDIS
# ===========================================
REDIS_PASSWORD=CHANGE_THIS_REDIS_PASSWORD_456!

# ===========================================
# RABBITMQ
# ===========================================
RABBITMQ_USER=viralify
RABBITMQ_PASSWORD=CHANGE_THIS_RABBITMQ_PASSWORD_789!

# ===========================================
# SECURITY
# ===========================================
JWT_SECRET=CHANGE_THIS_TO_A_VERY_LONG_RANDOM_STRING_AT_LEAST_64_CHARACTERS_LONG_FOR_SECURITY

# ===========================================
# AI PROVIDERS (Required)
# ===========================================
OPENAI_API_KEY=sk-your-openai-api-key

# ===========================================
# AI PROVIDERS (Optional)
# ===========================================
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key
GEMINI_API_KEY=your-gemini-api-key

# ===========================================
# MEDIA PROVIDERS
# ===========================================
# ElevenLabs - Voice cloning and TTS
ELEVENLABS_API_KEY=your-elevenlabs-api-key

# D-ID - AI avatar video generation
DID_API_KEY=your-did-api-key

# Replicate - AI models
REPLICATE_API_KEY=r8_your-replicate-api-key

# Pexels - Stock images/videos
PEXELS_API_KEY=your-pexels-api-key

# Cloudinary - Media storage
CLOUDINARY_URL=cloudinary://api_key:api_secret@cloud_name

# RunPod - GPU serverless (HunyuanVideo-Avatar)
RUNPOD_API_KEY=your-runpod-api-key
HUNYUAN_ENDPOINT_ID=your-endpoint-id

# Avatar provider: "hybrid", "hunyuan", "replicate", "d-id"
AVATAR_PROVIDER=replicate

# ===========================================
# SOCIAL MEDIA APIs
# ===========================================
TIKTOK_CLIENT_KEY=your-tiktok-client-key
TIKTOK_CLIENT_SECRET=your-tiktok-client-secret

# ===========================================
# PAYMENT (Phase 5C - Optional)
# ===========================================
